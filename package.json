{
	"name": "ai-minuts-monorepo",
	"private": true,
	"scripts": {
		"dev": "pnpm -r --parallel dev",
		"dev:site": "pnpm --filter site dev",
		"dev:workers": "pnpm --filter workers dev",
		"deploy:site": "pnpm --filter site deploy",
		"deploy:workers": "pnpm --filter workers deploy",
		"typecheck": "pnpm -r typecheck",
		"typecheck:site": "pnpm --filter site typecheck",
		"typecheck:workers": "pnpm --filter workers typecheck",
		"check": "pnpm biome:check",
		"biome:check": "biome check .",
		"biome:staged": "biome check --staged",
		"format": "biome check --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"@types/node": "^24.10.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@cloudflare/workers-types": "^4.20251128.0",
		"husky": "^9.1.7",
		"typescript": "^5.9.3",
		"wrangler": "^4.51.0"
	}
}
